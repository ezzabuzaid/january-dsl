#
# Build the docker image with `npx nx docker-build dsl`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t dsl`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system dsl && \
          adduser --system -G dsl dsl

COPY dist/apps/dsl dsl/
RUN chown -R dsl:dsl .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix dsl --omit=dev -f install

CMD [ "node", "dsl" ]
